<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuestionBank</title>

    <environment include="Development">
        <link href="~/css/material.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/admin.css" />
    </environment>

    <script src="~/js/jquery-3.1.0.min.js"></script>
    <script src="~/js/jquery.js"></script>
</head>
<body>
    <div><div>
             <div class="w3-bar w3-border header">
                 <a class="w3-bar-item w3-button logo menu">Q B</a>
                 <a href="~/Admin/Index" class="w3-bar-item w3-button menu">Index</a>
                 <a href="~/Admin/Lectures" class="w3-bar-item w3-button w3-light-grey menu">Lectures</a>
                 <a href="~/Admin/Buggy" class="w3-bar-item w3-button menu">Buggy</a>
                 <a href="~/Admin/Accounts" class="w3-bar-item w3-button menu">Accounts</a>
                 <a href="~/Admin/Load" class="w3-bar-item w3-button menu">Load</a>
                 <a href="~/Connect/Profile" class="w3-bar-item w3-button w3-hide-small menu">Profil</a>
                 <a href="~/Connect/Logout" class="w3-bar-item w3-button w3-hide-small menu">Exit</a>

                 <button type="button" class="mdl-chip" style="background-color:#dcdcdc;float:right; margin-left:5px;">
                     <span class="mdl-chip__text"><a asp-action="Questions_Insert" asp-controller="Home">Question</a></span>
                 </button>
                 <button type="button" class="mdl-chip" style="background-color:#dcdcdc;float:right; margin-left:5px;">
                     <span class="mdl-chip__text"><a asp-action="Subjects_Create">Subject</a></span>
                 </button>
                 <button type="button" class="mdl-chip" style="background-color:#dcdcdc;float:right; margin-left:5px;">
                     <span class="mdl-chip__text"><a asp-action="Lectures_Create">Lecture</a></span>
                 </button>
             </div>
    </div>
    </div>
    <div class="box">@RenderBody()</div>
</body>
</html>

