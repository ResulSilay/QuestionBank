@model IEnumerable<QuestionBank.Models.QuestionsTests>

@{
    ViewData["Title"] = "Questions_Tests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div>
        <div class="q_title">
            <div style="float:left; padding-top: 7px;">
                @Html.DisplayFor(modelItem => item.Id) -  @Html.DisplayFor(modelItem => item.Title)
            </div>
            <div style="float:right;">
                <button class="mdl-button mdl-js-button mdl-button--icon" >
                    <a asp-action="Buggy" asp-route-id="@item.Id" asp-route-qtype="1">
                        <i class="material-icons">outlined_flag</i>
                    </a>
                </button>
            </div>
        </div>
        <div class="q_content">
            <div>
                <button class="mdl-chip mdl-chip--contact">
                    <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">A</span>
                    <span class="mdl-chip__text">@Html.DisplayFor(modelItem => item.A)</span>
                </button>
            </div>
            <div>
                <button class="mdl-chip mdl-chip--contact">
                    <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">B</span>
                    <span class="mdl-chip__text">@Html.DisplayFor(modelItem => item.B)</span>
                </button>
            </div>
            <div>
                <button class="mdl-chip mdl-chip--contact">
                    <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">C</span>
                    <span class="mdl-chip__text">@Html.DisplayFor(modelItem => item.C)</span>
                </button>
            </div>
            <div>
                <button class="mdl-chip mdl-chip--contact">
                    <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">D</span>
                    <span class="mdl-chip__text">@Html.DisplayFor(modelItem => item.D)</span>
                </button>
            </div>
            <div>
                <button class="mdl-chip mdl-chip--contact">
                    <span class="mdl-chip__contact mdl-color--teal mdl-color-text--white">E</span>
                    <span class="mdl-chip__text">@Html.DisplayFor(modelItem => item.E)</span>
                </button>
            </div>
        </div>
    </div>
}
