@model QuestionBank.Models.QuestionsTests

@{
    ViewData["Title"] = "Questions_Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#LectureId").change(function () {

                var url = '@Url.Content("~/")'+ "Home/GetSubjects";
                var source = "#LectureId";
                $.getJSON(url, { LectureId: $(source).val() }, function (data) {
                    var items = '';
                    $("SubjectId").empty();
                    $.each(data, function (i, subject) {
                        items += "<option value='" + subject.value + "'>" + subject.text + "</option>";

                    });

                    $("#SubjectId").html(items);
                });
            });
        });
    </script>
    <style>
        ul, ol{
            padding:0px;
        }
    </style>

    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
</head>

<div class="q_title">
    <div style="float:left; padding-top: 7px;">
        Question Insert
    </div>
    <div style="float:right; display:none">
        <button type="button" class="mdl-chip">
            <span class="mdl-chip__text">Test</span>
        </button>
        <button type="button" class="mdl-chip">
            <span class="mdl-chip__text">Boşluk</span>
        </button>
    </div>
</div>
<div class="row">
    <div class="h_content">
        <form name="form1" asp-action="Questions_Insert">
            <div class="h_item">
                <label asp-for="LectureId" class="mdl-chip__text">Lectures</label>
                <select id="LectureId" name="LectureId" asp-for="LectureId" class="mdl-textfield__input" asp-items="@(new SelectList(ViewBag.ListOfLectures,"Id","Name"))"></select>
            </div>

            <div class="h_item">
                <label asp-for="SubjectId" class="mdl-chip__text">Subjects</label>
                <select id="SubjectId" name="SubjectId" asp-for="SubjectId" class="mdl-textfield__input" asp-items="@(new SelectList(string.Empty,"SubjectId","SubjectName"))"></select>
            </div>

            <div class="h_item">
                <label class="mdl-chip__text">Level</label>
                <span class="text-danger"></span>
                <select id="q_type" name="q_type" class="mdl-textfield__input">
                    <option value="1">Normal</option>
                    <option value="2">Kolay</option>
                    <option value="3">Zor</option>
                    <option value="4">Çok Zor</option>
                </select>
            </div>

            <div class="h_item">
                <label asp-for="Title" class="mdl-chip__text"></label>
                <input asp-for="Title" class="mdl-textfield__input"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
                <div class="mdl-tabs__tab-bar">
                    <a href="#starks-panel" class="mdl-tabs__tab is-active">Test</a>
                    <a href="#lannisters-panel" class="mdl-tabs__tab">Doğru/Yanlış</a>
                    <a href="#targaryens-panel" class="mdl-tabs__tab">Boşluk</a>
                </div>

                <div class="mdl-tabs__panel is-active" id="starks-panel">
                    <ul>
                        <div class="h_item">
                            <label asp-for="A" class="mdl-chip__text"></label>
                            <input asp-for="A" class="mdl-textfield__input" />
                            <span asp-validation-for="A" class="text-danger"></span>
                        </div>
                        <div class="h_item">
                            <label asp-for="B" class="mdl-chip__text"></label>
                            <input asp-for="B" class="mdl-textfield__input" />
                            <span asp-validation-for="B" class="text-danger"></span>
                        </div>
                        <div class="h_item">
                            <label asp-for="C" class="mdl-chip__text"></label>
                            <input asp-for="C" class="mdl-textfield__input" />
                            <span asp-validation-for="C" class="text-danger"></span>
                        </div>
                        <div class="h_item">
                            <label asp-for="D" class="mdl-chip__text"></label>
                            <input asp-for="D" class="mdl-textfield__input" />
                            <span asp-validation-for="D" class="text-danger"></span>
                        </div>
                        <div class="h_item">
                            <label asp-for="E" class="mdl-chip__text"></label>
                            <input asp-for="E" class="mdl-textfield__input" />
                            <span asp-validation-for="E" class="text-danger"></span>
                        </div>
                        <div class="h_item">
                            <label asp-for="Result" class="mdl-chip__text"></label>
                            <span asp-validation-for="Result" class="text-danger"></span>
                            <select id="Result" name="Result" class="mdl-textfield__input">
                                <option value="1">A</option>
                                <option value="2">B</option>
                                <option value="3">C</option>
                                <option value="4">D</option>
                                <option value="5">E</option>
                            </select>
                        </div>

                    </ul>
                </div>
                <div class="mdl-tabs__panel" id="lannisters-panel">
                    <ul>
                        <div class="h_item">
                            <label class="mdl-chip__text">True</label>
                            <input id="tf_true" name="tf_true" class="mdl-textfield__input" />
                        </div>
                        <div class="h_item">
                            <label class="mdl-chip__text">False</label>
                            <input id="tf_false" name="tf_false" class="mdl-textfield__input" />
                        </div>

                        <div class="h_item">
                            <label asp-for="Result" class="mdl-chip__text"></label>
                            <span asp-validation-for="Result" class="text-danger"></span>
                            <select id="tf_Result" name="tf_Result" class="mdl-textfield__input">
                                <option value="1">A</option>
                                <option value="2">B</option>
                            </select>
                        </div>
                    </ul>
                </div>
                <div class="mdl-tabs__panel" id="targaryens-panel">
                    <ul>
                    </ul>
                </div>
            </div>
            <div class="h_item">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
