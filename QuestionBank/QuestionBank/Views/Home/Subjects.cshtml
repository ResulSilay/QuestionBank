@model IEnumerable<QuestionBank.Models.Subjects>

@{
    ViewData["Title"] = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datetime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datetime)
            </td>
            <td>
                @if (item.Status == 1)
                {
                    <span class="mdl-chip">
                        <span class="mdl-chip__text">On</span>
                    </span>
                }
                @if (item.Status == 0)
                {
                    <span class="mdl-chip">
                        <span class="mdl-chip__text">Off</span>
                    </span>
                }
            </td>
            <td>
                <button type="button" class="mdl-chip">
                    <span class="mdl-chip__text"><a asp-action="Questions_Tests" class="mdl-chip__text" asp-route-id="@item.Id">Testi Çöz</a></span>
                </button>
                <button type="button" class="mdl-chip" style="display:normal;">
                    <span class="mdl-chip__text"><a asp-action="Questions_Correct" class="mdl-chip__text" asp-route-id="@item.Id">Boşluk Çöz</a></span>
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>
