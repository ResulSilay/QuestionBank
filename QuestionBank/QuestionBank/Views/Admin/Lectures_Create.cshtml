@model QuestionBank.Models.Lectures

@{
    ViewData["Title"] = "Lectures_Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="actions">
    Lectures Insert
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Lectures_Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="h_item">
                <label asp-for="Name" class="mdl-chip__text"></label>
                <input asp-for="Name" class="mdl-textfield__input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="h_item">
                <label asp-for="Description" class="mdl-chip__text"></label>
                <input asp-for="Description" class="mdl-textfield__input" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
