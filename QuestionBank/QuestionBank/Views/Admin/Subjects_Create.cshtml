@model QuestionBank.Models.Subjects

@{
    ViewData["Title"] = "Subjects_Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="actions">
    Subject Insert
</div>      
<div>
    <form asp-action="Subjects_Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="h_item">
            <label asp-for="LectureId" class="mdl-chip__text">Lectures</label>
            <select id="LectureId" name="LectureId" asp-for="LectureId" class="mdl-textfield__input" asp-items="@(new SelectList(ViewBag.ListOfLectures,"Id","Name"))"></select>
        </div>

        <div class="h_item">
            <label asp-for="Name" class="mdl-chip__text"></label>
            <input asp-for="Name" class="mdl-textfield__input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="h_item">
            <label asp-for="Description" class="mdl-chip__text"></label>
            <input asp-for="Description" class="mdl-textfield__input" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="h_item">
            <label asp-for="Datetime" class="mdl-chip__text"></label>
            <input asp-for="Datetime" class="mdl-textfield__input"  />
            <span asp-validation-for="Datetime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>
</div>